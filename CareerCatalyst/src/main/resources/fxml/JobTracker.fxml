<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane fx:id="mainBorderPane" prefHeight="700.0" prefWidth="1000.0" stylesheets="@../css/style.css" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.careerplanner.controller.JobTrackerController">
   <top>
      <VBox spacing="10.0" styleClass="header-section" BorderPane.alignment="CENTER">
         <children>
            <HBox alignment="CENTER_LEFT" spacing="20.0">
               <children>
                  <Label styleClass="app-title" text="Career Planner" />
                  <HBox alignment="CENTER_RIGHT" spacing="10.0" HBox.hgrow="ALWAYS">
                     <children>
                        <Button mnemonicParsing="false" onAction="#handleRefresh" styleClass="header-button" text="Refresh" />
                     </children>
                  </HBox>
               </children>
            </HBox>
            <HBox spacing="10.0" styleClass="nav-bar">
               <children>
                  <Button mnemonicParsing="false" onAction="#navigateToDashboard" styleClass="nav-button" text="Dashboard" />
                  <Button mnemonicParsing="false" styleClass="nav-button, nav-button-active" text="Job Tracker" />
                  <Button mnemonicParsing="false" onAction="#navigateToResume" styleClass="nav-button" text="Resume" />
                  <Button mnemonicParsing="false" onAction="#navigateToResources" styleClass="nav-button" text="Resources" />
               </children>
            </HBox>
         </children>
      </VBox>
   </top>
   <center>
      <VBox spacing="15.0" styleClass="content-section" BorderPane.alignment="CENTER">
         <children>
            <Label fx:id="headerLabel" styleClass="page-title" text="Your Job Tracker" />
            <HBox fx:id="notificationPane" alignment="CENTER_LEFT" spacing="10.0" styleClass="notification-pane" visible="false">
               <children>
                  <Label fx:id="notificationLabel" styleClass="notification-text" text="You have job applications with deadlines approaching!" wrapText="true" />
               </children>
            </HBox>
            <TabPane fx:id="jobTabPane" tabClosingPolicy="UNAVAILABLE" VBox.vgrow="ALWAYS">
              <tabs>
                <Tab text="List View">
                     <content>
                        <BorderPane>
                           <top>
                              <VBox spacing="10.0" BorderPane.alignment="CENTER">
                                 <children>
                                    <HBox alignment="CENTER_LEFT" spacing="10.0">
                                       <children>
                                          <Label text="Filter by Status:" />
                                          <ComboBox fx:id="statusFilterComboBox" prefWidth="150.0" promptText="All Statuses" />
                                          <TextField fx:id="searchTextField" prefWidth="250.0" promptText="Search by title, company, or location" HBox.hgrow="ALWAYS" />
                                          <Button mnemonicParsing="false" onAction="#handleAddJob" styleClass="action-button" text="Add Job" />
                                       </children>
                                    </HBox>
                                 </children>
                              </VBox>
                           </top>
                           <center>
                              <TableView fx:id="jobTableView" BorderPane.alignment="CENTER" />
                           </center>
                        </BorderPane>
                     </content>
                </Tab>
                <Tab text="Card View">
                     <content>
                        <BorderPane>
                           <top>
                              <HBox alignment="CENTER_RIGHT" spacing="10.0" BorderPane.alignment="CENTER">
                                 <children>
                                    <Button mnemonicParsing="false" onAction="#handleAddJob" styleClass="action-button" text="Add Job" />
                                 </children>
                              </HBox>
                           </top>
                           <center>
                              <ScrollPane fx:id="cardScrollPane" fitToHeight="true" BorderPane.alignment="CENTER">
                                 <content>
                                    <HBox fx:id="cardContainerHBox" spacing="20.0" />
                                 </content>
                              </ScrollPane>
                           </center>
                        </BorderPane>
                     </content>
                </Tab>
              </tabs>
            </TabPane>
         </children>
      </VBox>
   </center>
   <bottom>
      <HBox alignment="CENTER_RIGHT" spacing="10.0" styleClass="footer-section" BorderPane.alignment="CENTER">
         <children>
            <Label styleClass="footer-text" text="Career Planner Application v1.0" />
         </children>
      </HBox>
   </bottom>
</BorderPane>
