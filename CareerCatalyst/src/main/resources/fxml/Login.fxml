<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane fx:id="mainBorderPane" prefHeight="700.0" prefWidth="1000.0" styleClass="login-background" stylesheets="@../css/style.css" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.careerplanner.controller.LoginController">
   <center>
      <VBox fx:id="loginForm" alignment="CENTER" maxWidth="400.0" spacing="20.0" styleClass="login-form" BorderPane.alignment="CENTER">
         <children>
            <Label styleClass="app-title" text="Career Planner">
               <font>
                  <Font name="System Bold" size="28.0" />
               </font>
            </Label>
            <Label styleClass="login-subtitle" text="Sign in to your account" />
            <Label fx:id="errorMessageLabel" styleClass="error-label" text="Invalid email or password" visible="false" />
            <TextField fx:id="emailField" promptText="Email Address" styleClass="login-field">
               <VBox.margin>
                  <Insets top="10.0" />
               </VBox.margin>
            </TextField>
            <PasswordField fx:id="passwordField" promptText="Password" styleClass="login-field" />
            <HBox alignment="CENTER_RIGHT">
               <children>
                  <Hyperlink onAction="#handleForgotPassword" styleClass="forgot-password-link" text="Forgot Password?" />
               </children>
            </HBox>
            <Button fx:id="loginButton" defaultButton="true" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#handleLogin" styleClass="login-button" text="Login" />
            <HBox alignment="CENTER" spacing="5.0">
               <children>
                  <Label text="Don't have an account?" />
                  <Button fx:id="registerButton" mnemonicParsing="false" onAction="#handleRegister" styleClass="link-button" text="Register" />
               </children>
            </HBox>
            <HBox alignment="CENTER">
               <children>
                  <Button mnemonicParsing="false" onAction="#handleDemoLogin" styleClass="demo-button" text="Try Demo Account" />
               </children>
               <VBox.margin>
                  <Insets top="10.0" />
               </VBox.margin>
            </HBox>
         </children>
         <padding>
            <Insets bottom="30.0" left="40.0" right="40.0" top="30.0" />
         </padding>
      </VBox>
   </center>
   <bottom>
      <HBox alignment="CENTER" styleClass="login-footer" BorderPane.alignment="CENTER">
         <children>
            <Label styleClass="footer-text" text="Career Planner Application v1.0" />
         </children>
         <padding>
            <Insets bottom="10.0" top="10.0" />
         </padding>
      </HBox>
   </bottom>
</BorderPane>
